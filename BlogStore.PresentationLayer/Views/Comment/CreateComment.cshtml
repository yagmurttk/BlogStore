@model BlogStore.EntityLayer.Entities.Comment
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        background: linear-gradient(135deg, #fce4ec 0%, #e3f2fd 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    form {
        background: white;
        padding: 3.5rem 4rem;
        border-radius: 1rem;
        box-shadow: 0 8px 30px rgba(93, 135, 255, 0.2);
        max-width: 650px;
        width: 100%;
    }

    h2 {
        font-size: 2.2rem;
        margin-bottom: 2rem;
        color: #5D87FF;
        font-weight: 700;
    }

    label {
        font-weight: 700;
        color: #5D87FF;
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
        display: block;
    }

    input[type="text"],
    textarea {
        border: 2.5px solid #f48fb1;
        border-radius: 12px;
        padding: 14px 18px;
        font-size: 1.1rem;
        width: 100%;
        box-sizing: border-box;
        color: #4a4a4a;
        font-weight: 600;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        resize: vertical;
    }

        input[type="text"]:focus,
        textarea:focus {
            outline: none;
            border-color: #5D87FF;
            box-shadow: 0 0 12px rgba(93, 135, 255, 0.7);
            background: #f0f4ff;
        }

    button.btn-pinkblue {
        background: linear-gradient(135deg, #f48fb1, #5D87FF);
        border: none;
        padding: 14px 40px;
        border-radius: 35px;
        font-weight: 700;
        color: white;
        box-shadow: 0 8px 22px rgba(93, 135, 255, 0.5);
        transition: all 0.3s ease;
        cursor: pointer;
        width: 100%;
        font-size: 1.35rem;
        margin-top: 1.5rem;
    }

        button.btn-pinkblue:hover {
            background: linear-gradient(135deg, #5D87FF, #f48fb1);
            box-shadow: 0 10px 30px rgba(244, 143, 177, 0.7);
            transform: translateY(-4px);
            color: white;
        }
</style>

<div>
    <form method="post" novalidate>
        <h2 class="text-center">Yorum Ekle</h2>
        <label for="UserNameSurname">Yorum Yazar Adı</label>
        <input type="text" asp-for="UserNameSurname" id="UserNameSurname" />
        <br /><br />
        <label for="CommentDetail">Yorum Detayı</label>
        <textarea asp-for="CommentDetail" id="CommentDetail" rows="6"></textarea>
        <br />
        <button type="submit" class="btn btn-pinkblue">Ekle</button>
    </form>
</div>
