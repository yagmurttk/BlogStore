@model List<BlogStore.EntityLayer.Entities.Article>
@{
    ViewData["Title"] = "MyArticleList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #fce4ec 0%, #e3f2fd 100%);
        min-height: 100vh;
        padding: 3rem 1rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-title {
        position: relative;
        font-size: 2.4rem;
        font-weight: 800;
        color: #5D87FF;
        margin-bottom: 3rem;
        text-align: center;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
        padding: 0 1rem;
        /* Alt çizgi efekti */
    }

        .page-title::after {
            content: "";
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            bottom: -12px;
            width: 80px;
            height: 6px;
            border-radius: 4px;
            background: linear-gradient(90deg, #f48fb1, #5D87FF);
            box-shadow: 0 4px 12px rgba(244, 143, 177, 0.7);
        }

    .table-container {
        background: white;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 6px 24px rgba(93, 135, 255, 0.15);
        max-width: 900px;
        margin: 0 auto 3rem;
    }

    table {
        border-collapse: separate !important;
        border-spacing: 0 14px !important;
        width: 100%;
        color: #4a4a4a;
        font-weight: 600;
        font-size: 1rem;
        background: transparent !important;
    }

    thead tr {
        background: transparent;
    }

    thead th {
        text-align: left;
        padding: 14px 20px;
        color: #5D87FF;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.3px;
        border-bottom: 3px solid #f48fb1;
    }

    tbody tr {
        background: #f0f4ff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(93, 135, 255, 0.1);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        cursor: default;
    }

        tbody tr:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 28px rgba(244, 143, 177, 0.3);
            background: #fbe8f0;
        }

    tbody td {
        padding: 16px 20px;
        vertical-align: middle;
    }

    .btn-primary {
        background: linear-gradient(135deg, #f48fb1, #5D87FF);
        border: none;
        padding: 8px 24px;
        border-radius: 30px;
        font-weight: 700;
        color: white;
        box-shadow: 0 6px 18px rgba(93, 135, 255, 0.4);
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #5D87FF, #f48fb1);
            box-shadow: 0 8px 24px rgba(244, 143, 177, 0.6);
            transform: translateY(-3px);
            color: white;
            text-decoration: none;
        }
</style>

<h1 class="page-title">Bloglar</h1>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Görüntüle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>
                        <a href="/Article/ArticleDetail/@item.Slug" class="btn btn-primary">Oku</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
