@model BlogStore.EntityLayer.Entities.Article
@{
    ViewData["Title"] = "CreateArticle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #fce4ec 0%, #e3f2fd 100%);
        min-height: 100vh;
        padding: 3rem 1rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-container {
        background: white;
        padding: 2.5rem 3rem;
        border-radius: 1rem;
        box-shadow: 0 6px 24px rgba(93, 135, 255, 0.15);
        max-width: 700px;
        margin: 0 auto 3rem;
    }

    form label {
        font-weight: 600;
        color: #5D87FF;
        display: block;
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }

    form input[type="text"],
    form textarea,
    form select,
    form .form-control {
        border: 2px solid #f48fb1;
        border-radius: 10px;
        padding: 10px 15px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        width: 100%;
        box-sizing: border-box;
        color: #4a4a4a;
        font-weight: 600;
    }

        form input[type="text"]:focus,
        form textarea:focus,
        form select:focus,
        form .form-control:focus {
            outline: none;
            border-color: #5D87FF;
            box-shadow: 0 0 8px rgba(93, 135, 255, 0.6);
            background: #f0f4ff;
        }

    form textarea {
        resize: vertical;
    }

    .btn-info {
        background: linear-gradient(135deg, #f48fb1, #5D87FF);
        border: none;
        padding: 10px 28px;
        border-radius: 30px;
        font-weight: 700;
        color: white;
        box-shadow: 0 6px 18px rgba(93, 135, 255, 0.4);
        transition: all 0.3s ease;
        cursor: pointer;
        margin-top: 1rem;
        display: inline-block;
    }

        .btn-info:hover {
            background: linear-gradient(135deg, #5D87FF, #f48fb1);
            box-shadow: 0 8px 24px rgba(244, 143, 177, 0.6);
            transform: translateY(-3px);
            color: white;
            text-decoration: none;
        }
</style>

<div class="form-container">
    <form method="post">
        <label>Makale Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <br />
        <label>Makale Görseli</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />
        <label>Makale Kategorisi</label>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
        <br />
        <label>Makale İçeriği</label>
        <textarea asp-for="Description" rows="5" class="form-control"></textarea>
        <br />
        <button class="btn btn-info">Makale Ekle</button>
    </form>
</div>
